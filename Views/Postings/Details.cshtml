@model Bluong4_Job_Bank.Models.Posting

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Posting</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumberOpen)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOpen)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClosingDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClosingDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Position.Name)
        </dd>
        <dt class="col-sm-2">
            Job Posting Documents:
        </dt>
        <dd class = "col-sm-10">
            @{
                int fileCount = Model.PostingDocuments.Count;
                if (fileCount > 0)
                {
                    var firstFile = Model.PostingDocuments.FirstOrDefault(); ;
                    if (fileCount > 1)
                    {
                        <a class="" role="button" data-toggle="collapse" href="#collapseDocs@(Model.ID)" aria-expanded="false" aria-controls="collapseDocs@(Model.ID)">
                            <span class="badge badge-info">@fileCount</span> Documents...
                        </a>
                        <div class="collapse" id="collapseDocs@(Model.ID)">
                            @{
                                foreach (var d in Model.PostingDocuments)
                                {
                                    <a asp-action="Download" asp-route-id="@d.ID">@d.FileName</a> <br />
                                }
                            }
                        </div>
                    }
                    else
                    {
                        <a asp-action="Download" asp-route-id="@firstFile.ID">@firstFile.FileName</a>
                    }
                }
            }
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
